extends ../layout

block content
	.row
		form(method="post").col.s12
			.row
				.input-field.col.s12.m6
					input(placeholder="test@example.com", type="email", name="email", id="email", class="validate", required)
					label(for="email") Email
				.input-field.col.s12.m6
					select(name="role", id="role", required)
						option(value="user") User
						option(value="admin") Admin
						option(value="superAdmin") Super Admin
					label(for="role") Role
			.row
				.input-field.col.s12.m6
					input(placeholder="At least #{minimumPasswordLength} characters", type="password", name="password", id="password", class="validate", required)
					label(for="password") Password
				.input-field.col.s12.m6
					input(type="password", name="confirmPassword", id="confirmPassword", class="validate", required)
					label(for="confirmPassword") Confirm Password
			.row
				.input-field.col.s12
					include ../partials/_csrf-token
					button.btn.waves-effect.waves-light Submit
					a.btn-flat.waves-effect.waves-light(href="/") Cancel
